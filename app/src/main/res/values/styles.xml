<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="App_Textview_Heading" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/subject</item>
        <item name="android:textSize">@dimen/msg_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App_Textview_Content" parent="@android:style/Widget.TextView">
        <item name="android:ellipsize">end</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">@dimen/msg_text_secondary</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
